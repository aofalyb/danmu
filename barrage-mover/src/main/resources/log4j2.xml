<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <properties>

        <!-- 是否打印所在的行号(对性能影响比较大) -->
        <property name="enable_log_location">false</property>
        <!-- 应用名 -->
        <property name="logstack.application.name">barrage</property>
        <property name="logstack.client.id">mover</property>
        <property name="vmid">server</property>
        <!-- 日志输出目录 -->
        <property name="LOG_HOME">logs/${logstack.application.name}-${logstack.client.id}</property>
    </properties>


    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%msg%n" />
        </Console>

        <RollingRandomAccessFile name="defFile" fileName="${LOG_HOME}/${logstack.application.name}.log" filePattern="${LOG_HOME}/%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="%msg%n" charset="utf-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="31"/>
        </RollingRandomAccessFile>

        <Async name="AsyncAppender">
            <AppenderRef ref="defFile"/>
        </Async>


        <RollingRandomAccessFile name="errorLog" fileName="${LOG_HOME}/error-${logstack.application.name}.log" filePattern="${LOG_HOME}/error-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %msg%n" charset="utf-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="31"/>
        </RollingRandomAccessFile>

        <Async name="defAppender">
            <AppenderRef ref="defFile"/>

        </Async>

        <Async name="errorAppender">
            <AppenderRef ref="errorLog"/>

        </Async>

    </Appenders>

    <Loggers>
        <Logger name="defLogger" level="info" additivity="false">
            <AppenderRef ref="defAppender" />
            <AppenderRef ref="Console" />
        </Logger>

        <Logger name="errorLogger" level="info" additivity="false">
            <AppenderRef ref="errorAppender" />
            <AppenderRef ref="Console" />
        </Logger>
    </Loggers>
</Configuration>